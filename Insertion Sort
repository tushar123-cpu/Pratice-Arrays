// INSERTION SORT

#include<iostream>
using namespace std;

void insertionASort(int arr[], int n){
    for(int i = 1; i < n;i++){
        int temp = arr[i];
        int j = i - 1;

        for(;j >= 0; j--){
            if(arr[j] > temp){
                arr[j + 1] = arr[j];
            }
            else{
                break;
            }

        }

        arr[j + 1] = temp;

    }

    

}
int main()
{
    int arr[] = {4,6,7,3,2,1};
    int n = 6;

    insertionASort(arr, n);


    cout << "sorted array ";

    for(int i = 0; i < n; i++){
        cout << arr[i] << " ";
    }

    cout << endl;
    
    return 0;
}
